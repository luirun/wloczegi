<%= simple_form_for @user, url: {controller: "users", action: "update"}, html: { multipart: true } do |form| %>
<%= form.error_notification %>

<%= form.hidden_field :id %>

<%= form.label :password %>
<%= form.password_field :password %>

<%= form.label :password_confirmation %>
<%= form.password_field :password_confirmation %>

<%= form.input :imie %>
<%= form.input :nazwisko %>

<%= form.label :description, "Opis:" %>
<%= form.cktext_area :description, :ckeditor => {:language => 'pl'} %>

<%= form.label :avatar, "Dodaj Awatar" %>
<%= form.file_field :avatar %>

<%= form.button :submit, 'Zaaktualizuj profil!', class: 'submit' %>
<% end %>