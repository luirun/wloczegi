<% @posts.reverse.each do |f| %>
<% user = User.find(f.id_autora) %>
<% category = Category.find(f.kategoria) %>

    <div class="row">

      <div class="medium-6 large-4 columns">

		<article class="article-card">

          <img src="<%= f.coverphoto.url(:medium) %>">

          <div class="card-content">

            <img class="post-icon" src="<%= category.icon.url(:thumb) %>" alt="foundation icon">

            <p class="post-author">Dodano przez: <%= user.imie %> <%= user.nazwisko %></p>

            <h4><%= f.tytul %></h4>

            <p><%= f.short_description %></p>

            <p>

              <%= link_to "Czytaj więcej...", {controller: "posts", action: "show",s: f.tytul} %>

			<a href="#" class="right">
				<i class="fi-share">
					<%= image_tag "/system/buttons/facebook.png", style: "width:10%;" %>
					<%= image_tag "/system/buttons/twitter.png", style: "width:10%;" %>
				</i>
			</a>

            </p>

          </div>

        </article>
		
      </div>
<% end %>	
<center>
<%= link_to "Powrót!", :back, class: "button" %>
<center>