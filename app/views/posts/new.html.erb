<%= form_for @post, url: {controller: "posts", action: "create"}, method: "post" do |f| %>

		<%= f.hidden_field :id %>
		
		<%= f.hidden_field :id_autora, value: current_user.id%>

		<%= f.hidden_field :data_dodania, value: Time.now() %>
		
		<%= label_tag :tytul %>
		<%= f.text_field :tytul %>
		
		<%= label_tag(:opis, "Skrocony opis:") %>
		<%= f.text_field :short_description %>
		
		<%= label_tag(:opis, "Pełen opis:") %>
		<%= f.text_field :full_description %>
		
		<%= label_tag :kategoria, "Kategoria" %>
		<%= f.collection_select(:kategoria, @kategoria, :id, :nazwa) %>
		
		<%= label_tag :cover_photo, "Okładka:" %>
		<%= f.file_field :cover_photo %>
		

		
		<%= f.submit "Dodaj WYDARZENIE!" %>
<% end %>